{
  "name": "vx200-controller",
  "version": "2.12.2",
  "description": "Controlador headless para repetidora Simplex con mapa APRS interactivo - Optimizado para Raspberry Pi 3",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:prod": "npm run start",
    "dev": "node src/index.js",
    "test": "node src/test-complete.js",
    "health": "node -e \"console.log('VX200 Health Check:', new Date().toISOString())\"",
    
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:check": "eslint src/ --ext .js --max-warnings 0",
    
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    
    "code-quality": "npm run lint:check && npm run format:check",
    "code-fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "dtmf-detection-stream": "^1.18.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "node-record-lpcm16": "^1.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^54.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2"
  }
}
