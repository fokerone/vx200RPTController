<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="bi bi-radio"></i> VX200 Controller - LU5MCD
            </a>
            <div class="navbar-nav ms-auto">
                <span class="nav-link">
                    <i class="bi bi-circle-fill text-success" id="status-indicator"></i>
                    <span id="status-text">Conectado</span>
                </span>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Estado del Sistema -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-info-circle"></i> Estado del Sistema</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="stat-box">
                                    <i class="bi bi-volume-up-fill text-primary"></i>
                                    <h6>Audio</h6>
                                    <span class="badge bg-success" id="audio-status">Activo</span>
                                </div>
                            </div>
                            <div class="col-md-2">
        <div class="stat-box">
            <i class="bi bi-radio text-success" id="channel-icon"></i>
            <h6>Canal</h6>
            <span class="badge bg-success" id="channel-status">Libre</span>
            <div class="mt-2">
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar" id="signal-level-bar" role="progressbar" style="width: 0%"></div>
                </div>
                <small class="text-muted" id="signal-level-text">0%</small>
            </div>
        </div>
    </div>
                            <div class="col-md-2">
                                <div class="stat-box">
                                    <i class="bi bi-broadcast text-warning"></i>
                                    <h6>Baliza</h6>
                                    <span class="badge bg-info" id="baliza-status">Ejecutándose</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-box">
                                    <i class="bi bi-telephone-fill text-success"></i>
                                    <h6>DTMF</h6>
                                    <span class="badge bg-secondary" id="dtmf-last">Esperando</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-box">
                                    <i class="bi bi-chat-dots text-info"></i>
                                    <h6>SMS</h6>
                                    <span class="badge bg-secondary" id="sms-status">Inactivo</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Controles Manuales -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-gear-fill"></i> Controles Manuales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <button class="btn btn-primary w-100 mb-2" onclick="executeCommand('baliza_manual')">
                                    <i class="bi bi-broadcast"></i> Baliza Manual
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-info w-100 mb-2" onclick="executeCommand('datetime')">
                                    <i class="bi bi-clock"></i> Fecha/Hora
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-success w-100 mb-2" onclick="executeCommand('ai_chat')">
                                    <i class="bi bi-robot"></i> IA Chat
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-warning w-100 mb-2" onclick="executeCommand('sms')">
                                    <i class="bi bi-envelope"></i> SMS
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agregar después de la sección "Controles Manuales" -->

        <!-- Controles del Sistema -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning">
                        <h5><i class="bi bi-power"></i> Control del Sistema</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <button class="btn btn-outline-success w-100 mb-2" onclick="toggleService('audio')" id="audio-toggle-btn">
                                    <i class="bi bi-volume-up"></i> Audio On/Off
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-info w-100 mb-2" onclick="toggleService('baliza')" id="baliza-toggle-btn">
                                    <i class="bi bi-broadcast"></i> Baliza On/Off
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-warning w-100 mb-2" onclick="confirmAction('restart')" id="restart-btn">
                                    <i class="bi bi-arrow-clockwise"></i> Reiniciar
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-danger w-100 mb-2" onclick="confirmAction('shutdown')" id="shutdown-btn">
                                    <i class="bi bi-power"></i> Apagar
                                </button>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="alert alert-warning" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <strong>Atención:</strong> Los controles de reinicio y apagado afectarán todo el sistema.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Configuración de Baliza -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-sliders"></i> Configuración Baliza</h5>
                    </div>
                    <div class="card-body">
                        <form id="baliza-config-form">
                            <div class="mb-3">
                                <label class="form-label">Intervalo (minutos)</label>
                                <input type="number" class="form-control" id="baliza-interval" value="15" min="1" max="60">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Frecuencia (Hz)</label>
                                <input type="number" class="form-control" id="baliza-frequency" value="1000" min="100" max="2000">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Duración (ms)</label>
                                <input type="number" class="form-control" id="baliza-duration" value="500" min="100" max="2000">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mensaje</label>
                                <input type="text" class="form-control" id="baliza-message" value="LU5MCD Repetidora Simplex">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Actualizar
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Log en Tiempo Real -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-list-ul"></i> Log en Tiempo Real</h5>
                    </div>
                    <div class="card-body">
                        <div id="log-container" style="height: 300px; overflow-y: auto; font-family: monospace; font-size: 0.9em;">
                            <!-- Los logs aparecerán aquí -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- DTMF Monitor -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-telephone-plus"></i> Monitor DTMF</h5>
                    </div>
                    <div class="card-body">
                        <div id="dtmf-display" class="text-center p-4" style="font-size: 2rem; font-family: monospace; background-color: #f8f9fa; border-radius: 5px;">
                            Esperando DTMF...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>